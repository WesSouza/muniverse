{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "include": ["./src/**/*"],
  "exclude": [".git", "node_modules"]
}
